extends layout

block content
 div
  h1 Welkom bij Beans Bar

 div#bestelnav
  div
   h2 MENU
  div
   input(type='button', id = 'bestel' value='bestel')

 div#error
  p

 ul.large-accordion
   li
    a#drink Drinken
    ul.drinken.accordion
      if(Drinken.length)
       each cat in Drinken
        li(class='drinkcat', id=cat._id)
         a=cat.cat
         ul.miniaccordion
          case cat._id
           when "drink_1"
            each koffie in Koffie
             li(class='koffiecat', id=koffie._id)
              a=koffie.naam
              ul.mini-sub
               case koffie._id
                when "koffie_1"
                 each zwart in Zwart
                  li
                   div.item= zwart.naam
                   div= zwart.prijs
                   div
                    input(type='text', placeholder='#')
                when "koffie_2"
                 each metmelk in metMelk
                  li 
                   div.item= metmelk.naam
                   div= metmelk.prijs
                   div
                    input(type='text', placeholder='#') 
                when "koffie_3"
                 each special in Specials
                  li
                   div.item= special.naam
                   div= special.prijs
                   div
                    input(type='text', placeholder='#')   
           when "drink_2"
            each thee in Thee
             li
              div.item= thee.naam
              div= thee.prijs
              div
               input(type='text', placeholder='#')
           when "drink_3"
